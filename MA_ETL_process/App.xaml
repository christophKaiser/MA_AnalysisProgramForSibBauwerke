<Application x:Class="MA_ETL_process.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:MA_ETL_process"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- general definition of formatting values -->
        <System:Double x:Key="fontSize">16</System:Double>
        <Thickness x:Key="margin" Left="5" Top="5" Right="5" Bottom="5"/>

        <!-- apply formatting values to control-styles -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource fontSize}"/>
            <Setter Property="Margin" Value="{StaticResource margin}"/>
            <Setter Property="Padding" Value="10 2"/>
        </Style>

    </Application.Resources>
</Application>
